#VRML V1.0 ascii

# Simple VRML 1.0 scene: Red sphere with lighting and camera
# This is a minimal valid VRML file for testing the parser

Separator {
    # Directional light from above
    DirectionalLight {
        direction 0 -1 0
        intensity 1.0
        color 1 1 1
    }

    # Camera looking at origin
    PerspectiveCamera {
        position 0 0 5
        orientation 0 0 1 0
        focalDistance 5
        heightAngle 0.785398
    }

    # Red material
    Material {
        diffuseColor 1 0 0
        ambientColor 0.2 0 0
        specularColor 1 1 1
        shininess 0.5
    }

    # Sphere at origin
    Sphere {
        radius 1.0
    }
}
